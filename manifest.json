{
    "manifest_version": 2,
    "name": "Bookmark to the SSS",
    "description": "POST details of the current page to the SSS.",
    "version": "0.1",
	"options_page": "options.html",
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
		"storage",
        "http://*/", 
        "https://*/"
    ]
}